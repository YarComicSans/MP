<Window x:Class="MillionereGame.ConfirmationScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MillionereGame"
        mc:Ignorable="d"
        Title="Подтвердите свой ответ" Icon="icon.png" Height="349.138" Width="412.069" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="sure.png"/>
    </Window.Background>
    <Grid>
        <Button Name="NoButton" Content="Нет" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="254,243,0,0" Height="39" Click="NoButton_Click" Background="White" FontSize="16" FontFamily="Segoe UI Black"/>
        <Button Name="YesButton" Content="Да" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="37,243,0,0" Height="39" Click="YesButton_Click" Background="White" FontFamily="Segoe UI Black" FontSize="16"/>
        <Label Name="QuestionLabel" Content="Это Ваш окончательный ответ?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="37,29,38,0" Height="74" Width="331" Foreground="White" FontFamily="Segoe UI Black" FontSize="20"/>

    </Grid>
</Window>
