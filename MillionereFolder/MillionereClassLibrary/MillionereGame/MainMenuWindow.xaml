<Window x:Class="MillionereGame.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MillionereGame"
        mc:Ignorable="d"
        Title="MainMenuWindow" Height="450" Width="800">
    <Grid>
        <Button Name="NewGameButton"  Content="Новая игра" HorizontalAlignment="Left" Margin="334,90,0,0" VerticalAlignment="Top" Width="75" Click="NewGameButton_Click"/>
        <Button x:Name="LoadGameButton"  Content="Загрузить" HorizontalAlignment="Left" Margin="334,132,0,0" VerticalAlignment="Top" Width="75" Click="LoadGameButton_Click"/>
        <Button x:Name="ExitButton"  Content="Выход" HorizontalAlignment="Left" Margin="334,173,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click"/>
    </Grid>
</Window>
